{
  "name": "perks",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:production": "NODE_ENV=production next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "test": "vitest",
    "test:run": "vitest run",
    "analyze": "ANALYZE=true npm run build",
    "deploy:testnet": "npm run build && npm run deploy:contract:testnet",
    "deploy:mainnet": "npm run build && npm run deploy:contract:mainnet",
    "deploy:contract:testnet": "npx hardhat run scripts/deploy.ts --network arbitrumSepolia",
    "deploy:contract:mainnet": "npx hardhat run scripts/deploy.ts --network arbitrumOne",
    "deploy:factory:testnet": "npx hardhat run scripts/deploy-factory-testnet.ts --network arbitrumSepolia",
    "deploy:factory:simple": "npx tsx scripts/deploy-simple.ts",
    "deploy:factory:mock": "npx tsx scripts/mock-deployment.ts",
    "deploy:factory:mainnet": "npx hardhat run scripts/deploy-factory.ts --network arbitrumOne",
    "verify:testnet": "npx hardhat verify --network arbitrumSepolia",
    "verify:mainnet": "npx hardhat verify --network arbitrumOne",
    "postbuild": "npm run analyze:bundle",
    "analyze:bundle": "npx next-bundle-analyzer",
    "type-check": "tsc --noEmit",
    "lint:fix": "next lint --fix",
    "prepare:production": "npm run type-check && npm run lint:fix && npm run test:run && npm run build:production",
    "verify:deployment": "node scripts/verify-deployment.js",
    "health:check": "npm run verify:deployment"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@reduxjs/toolkit": "^2.8.2",
    "@supabase/supabase-js": "^2.56.1",
    "@tanstack/react-query": "^5.85.6",
    "critters": "^0.0.23",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "next": "^15.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "viem": "^2.36.0",
    "wagmi": "^2.16.9",
    "web-vitals": "^5.1.0",
    "@tailwindcss/postcss": "^4.1.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "5.5.4",
    "@types/react": "^19.1.8",
    "@types/node": "^20.14.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^3.0.1",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    
    "autoprefixer": "^10.4.21",
    "chai": "^6.0.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.3",
    "hardhat-gas-reporter": "^2.3.0",
    "jsdom": "^26.1.0",
    "solidity-coverage": "^0.8.16",
    
    "tsx": "^4.20.5",
    
    "vitest": "^3.2.4"
  },
  "type": "module"
}
